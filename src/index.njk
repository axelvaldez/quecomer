<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu Directory</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body class="page-index">

    <h1>Available Menus</h1>

    <div class="category-list">
        {% for cat in categoriesList %}
            <a href="/category/{{ cat | slugify }}/" class="category-pill">
                {{ cat }}
            </a>
        {% endfor %}

        <!-- 'Decide tú' pill appended as the last item in the pill list -->
        <a href="#" id="random-btn" class="category-pill primary">Decide tú</a>
    </div>

    <div class="grid">
        {# Loop through the 'restaurants' object #}
        {% for filename, restaurant in restaurants %}
            <a href="/menus/{{ restaurant.slug }}/" class="card">
                <h2>{{ restaurant.name }}</h2>
                <p>{{ restaurant.tagline }}</p>
                <div class="card-meta">
                    {{ restaurant.meta.location | default("Location N/A") }}
                </div>
            </a>
        {% endfor %}
    </div>

        <script>
            // Build an array of slugs from the rendered restaurants list
            var slugs = [
                {% for filename, restaurant in restaurants %}
                    "{{ restaurant.slug }}"{% if not loop.last %},{% endif %}
                {% endfor %}
            ];

            document.getElementById('random-btn').addEventListener('click', function () {
                if (!slugs || slugs.length === 0) return;
                var idx = Math.floor(Math.random() * slugs.length);
                var slug = slugs[idx];
                // Navigate to the menu page for the selected slug
                window.location.href = '/menus/' + encodeURIComponent(slug) + '/';
            });
        </script>

</body>
</html>