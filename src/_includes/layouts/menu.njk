<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ restaurant.name }}</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body class="page-menu"{% if restaurant.accentColor %} style="--accent-base: {{ restaurant.accentColor }};"{% endif %}>
<div class="container">
    <nav>
        {% if restaurant.categories and restaurant.categories | length > 0 %}
            {% for cat in restaurant.categories %}
                <a href="/category/{{ cat | slugify }}/" class="category-pill">{{ cat }}</a>
            {% endfor %}
        {% else %}
            <a href="/" class="category-pill">CategorÃ­as</a>
        {% endif %}

        <a href="/" class="category-pill primary">All menus</a>
    </nav>
    <header>
        <h1>{{ restaurant.name }}</h1>
        <p class="tagline">{{ restaurant.tagline }}</p>
        <div class="meta-grid">
            <span>ðŸ•’ {{ restaurant.meta.hours }}</span> | <span>ðŸ“· {{ restaurant.meta.social }}</span>
        </div>
    </header>
    <main>
        {% for section in restaurant.menu %}
        <section>
            <h2 class="cat-title">{{ section.title }}</h2>
            {% if section.note %}<div class="note"><strong>Nota:</strong> {{ section.note }}</div>{% endif %}
            {% for group in section.groups %}
                {% if group.subtitle %}<h3 class="sub-title">{{ group.subtitle }}</h3>{% endif %}
                {% for item in group.items %}
                <article class="dish">
                    <div class="d-head"><span>{{ item.name }}</span><span>${{ item.price }}</span></div>
                    {% if item.description %}<p class="d-desc">{{ item.description }}</p>{% endif %}
                    {% if item.includes %}<small class="d-meta">{{ item.includes }}</small>{% endif %}
                    {% if item.variants %}
                    <div>{% for v in item.variants %}<span class="addon">{{ v.label }} {% if v.price %}{{ v.price }}{% endif %}</span>{% endfor %}</div>
                    {% endif %}
                </article>
                {% endfor %}
            {% endfor %}
        </section>
        {% endfor %}
    </main>
</div>
</body>
</html>
